{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@sections/*": ["page-objects/sections/*"],
      "@pom/*": ["page-objects/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
